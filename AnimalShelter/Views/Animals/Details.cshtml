@{
    ViewData["Title"] = "Details";
}

<h1>Animal Info:</h1>
<div class="row">
    <div class="col-6">
        <img class="img-fluid" src=@Model.Image alt=@Model.Name>
    </div>
    <div class="col-6">
        <h2>@Model.Name</h2>
        <p>Animal ID: @Model.AnimalId</p>
        <h3>Details</h3>
        <p>Breed: @Model.Breed</p>
        <p>Sex: @Model.Sex</p>
        <p>Age: @Model.Age years</p>
        <p>Color: @Model.Color</p>
        <a href="/Animals/Edit/@(Model.AnimalId)" class="btn btn-dark">Edit</a>
        <a href="/Animals/Delete/@(Model.AnimalId)" class="btn btn-dark">Delete</a>
    </div>
</div>

<div id="return">
    <a href="/Animals">‚Üê</a>
</div>

